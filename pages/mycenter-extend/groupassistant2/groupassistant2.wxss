/* pages/mycenter-extend//groupassistant1/groupassistant1.wxss */

page {
   background: #fff;
}

.container .top .toptext {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 20rpx;
  padding-bottom: 10rpx;
  color: #999999;
}

.container .top .topline {
  width: 94%;
  margin: 0 3%;
  display: flex;
  align-items: center;
  /* padding: 0 30rpx; */
  box-sizing: border-box;
  background: rgba(244, 244, 244, 1);
  border-radius: 14rpx;
}

.container .top .topline image {
  width: 28rpx;
  height: 28rpx;
}

.container .top .topline .line {
  width: 325rpx;
  height: 4rpx;
  background: #858585;
}

.container .top .topline .line1{
  background:#F4F4F4;
}

.container .top .topline .dot {
  width: 16rpx;
  height: 16rpx;
  background: #D8D8D8;
  border-radius: 50%;
}

.container .top .topline .color {
  background: #2D5DF6;
}

.container .xianyong {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.12);
}

.container .xianyong .title{
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.container .xianyong  .groupnum{
  width: 532rpx;
  height: 49rpx;
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #2D5DF6;
  color: #fff;
  padding: 10rpx 20rpx;
}

.container .xianyong  .groupnum .groupnum-left{
  padding: 0 66rpx 0 77rpx;
  border-right: 1rpx solid #BFBFBF;
}

.container .xianyong  .groupnum .groupnum-right{
  padding-left: 22rpx;
}

.container .xianyong .tips{
  color: #333333;
  font-size: 20rpx;
  text-align: left;
  font-weight: 400;
  padding: 0 10rpx;
}

.container .back{
  width: 94%;
  margin: 0 3%;
  height: 85rpx;
  line-height:85rpx;
  color: #fff;
  background: #2D5DF6;
  text-align: center;
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 48rpx;
  border-radius: 10rpx;
}

/* pages/mycenter-extend//problemdetail/problemdetail.wxss */

page {
  background: #e8e8e9;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 300rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 64rpx;
  color: #fff;
  display: -webkit-box;
  line-height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 0 auto;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.container .red {
  height: 70rpx;
  background: #e80202;
  margin-top: 132rpx;
}

.container .content {
  width: 94%;
  margin: 0 3%;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-top: -70rpx;
  font-size: 30rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
}

.container .content .contain {
  /* font-size: 22rpx; */
}

.container .content .content-bot {
  font-size: 24rpx;
  text-align: center;
  margin-top: 70rpx;
}

.container .content .content-bot .problem {
  color: #999;
  margin-bottom: 30rpx;
  font-size: 20rpx;
}

.container .content .content-bot .btn {
  display: flex;
  justify-content: space-between;
  padding: 0 180rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.container .content .content-bot .btn view {
  display: flex;
  align-items: center;
}

.container .content .content-bot .btn .isok {
  border: 1rpx solid #2d5df6;
  border-radius: 30rpx;
  padding: 5rpx 10rpx;
  color: #2d5df6;
}

.container .content .content-bot .btn .notok {
  border: 1rpx solid #666;
  border-radius: 30rpx;
  padding: 5rpx 10rpx;
  color: #666;
}

.container .content .content-bot .btn image {
  width: 28rpx;
  height: 29rpx;
  margin-right: 8rpx;
}

.container .customer {
  position: fixed;
  bottom: 180rpx;
  width: 94%;
  height: 76rpx;
  line-height: 71rpx;
  margin: 0 3%;
  border-radius: 10rpx;
  background: #2d5df6;
  color: #fff;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 400;
}

.container {
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.container .box {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  margin-top: -70rpx;
  border-radius: 10rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
}

.position {
  position: relative;
  color: #fff;
}

.invitepeople {
  width: 156rpx;
  height: 48rpx;
  position: absolute;
  right: 0;
  top: 44rpx;
  background: #2d5df6;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 22rpx 0 0 22rpx;
}

.invitepeople image {
  width: 36rpx;
  height: 32rpx;
  vertical-align: -7rpx;
  margin-right: 5rpx;
}

.box1 {
  position: relative;
}

.container .box .people {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0 20rpx;
  color: #333;
}

.container .box .info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}

.container .box1 .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.container .box1 .info .info-left {
  flex: 6;
  display: flex;
  align-items: center;
}

.container .box1 .info .info-left .information {
  /* width: 400rpx; */
  display: flex;
  flex-direction: column;
}

.bs {
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
}

.container .box .info .img image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.infobox {
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container .box .info .name {
  display: flex;
  align-items: center;
}

.container .box .info .name image {
  width: 17rpx;
  height: 17rpx;
  margin-right: 5rpx;
}

.container .box .info .name  view {
  display: flex;
  align-items: center;
}

.member {
  display: flex;
  justify-content: center;
  /* width: 112rpx; */
  height: 28rpx;
  line-height: 28rpx;
  background: #2d5df6;
  border-radius: 14px;
  font-size: 20rpx;
  color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-left: 10rpx;
}

.registermember {
  color: #999;
  border: 1rpx solid #999;
  background: #fff;
}

.container .box .info .name .remember {
  background: #fff;
  color: rgba(130, 130, 130, 1);
  border: 1rpx solid rgba(130, 130, 130, 1);
}

.container .box .info .weixin {
  display: flex;
  color: #666;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.container .box .info .weixin1 {
  width: 550rpx;
  justify-content: space-between;
}

.container .box .info .weixin .change {
  margin-left: 30rpx;
}

.container .box .info .weixin  image {
  width: 28rpx;
  height: 28rpx;
}

.copy {
  width: 52rpx;
  height: 28rpx;
  border: 1rpx solid #999;
  border-radius: 14rpx;
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
  padding: 0 10rpx;
  text-align: center;
}

.jianbian {
  /* position: relative; */
  padding: 14rpx 20rpx 30rpx;
}

.jianbian .content {
  width: 100%;
  top: 30rpx;
  font-size: 24rpx;
  text-align: left;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 400;
}

.jianbian .content .content-bot {
  font-size: 20rpx;
}

.container .box .tips {
  color: #666666;
  font-size: 20rpx;
}

.container .box .recommend {
  width: 128rpx;
  height: 35rpx;
  line-height: 35rpx;
  /* margin-left: 120rpx; */
  background: #2d5df6;
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
  text-align: center;
}

/* 时间弹框 */

.container .clicktime {
  position: relative;
}

.container .clicktime .title {
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  margin-top: 30rpx;
}

.container .clicktime .content {
  margin-top: 20rpx;
  color: #666666;
  text-align: left;
  font-size: 28rpx;
  padding: 0 58rpx;
}

.container .clicktime .btn {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.container .clicktime .btn .cancle {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #F5F5F5;
  border-radius: 0 0 0 10rpx;
  color: #333333;
}

.container .clicktime .btn .submit {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  background: #2d5df6;
  border-radius: 0 0 10rpx 0;
  color: #fff;
}

.container .clicktime .x {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

/* 添加无地址的弹框 */

.container .clickaddress {
  position: relative;
}

.container .clickaddress .title {
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  margin-top: 30rpx;
}

.container .clickaddress .inp {
  width: 422rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1rpx solid #EEEEEE;
  margin: 10rpx auto;
  text-align: center;
  color: #666666;
  font-size: 28rpx;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  width: 422rpx;
  margin: 0 auto;
  font-size: 24rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  color: #666666;
}

.container .clickaddress .btn {
  display: flex;
  margin-top: 30rpx;
  height: 80rpx;
}

.container .clickaddress .btn .cancel {
  width: 50%;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 0 10rpx;
  border-top: 1rpx solid #F5F5F5;
  font-size: 30rpx;
}

.container .clickaddress .btn .addaddress {
  width: 50%;
  color: #fff;
  background: #2D5DF6;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 0;
  font-size: 30rpx;
}

.container .clickaddress .close {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 添加无地址的弹框结束 */

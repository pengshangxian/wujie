/* pages/mycenter-extend//groupassistant1/groupassistant1.wxss */

page {
  background: #fff;
}

.container .top .toptext {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  font-size: 20rpx;
  padding-bottom: 10rpx;
  color: #999;
}

.container .top .topline {
  width: 94%;
  margin: 0 3%;
  display: flex;
  align-items: center;
  /* padding: 0 30rpx; */
  box-sizing: border-box;
  background: rgba(244, 244, 244, 1);
  border-radius: 14rpx;
}

.container .top .topline image {
  width: 28rpx;
  height: 28rpx;
}

.container .top .topline .line {
  width: 325rpx;
  height: 4rpx;
  background: #858585;
}

.container .top .topline .line1{
  background:#F4F4F4;
}

.container .top .topline .dot {
  width: 16rpx;
  height: 16rpx;
  background: #D8D8D8;
  border-radius: 50%;
}

.container .top .topline .color {
  background: #2D5DF6;
}

.container .groupinfo {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

.container .groupinfo .groupinfo-top {
  display: flex;
  align-items: center;
}

.container .groupinfo .groupinfo-top .title {
  color: #333333;
  font-size: 24rpx;
  font-weight: bold;
}

.container .groupinfo .groupinfo-top .groupname {
  width: 345rpx;
  height: 39rpx;
  line-height: 39rpx;
  background: #F4F4F4;
  border-radius: 5rpx;
  font-size: 24rpx;
  /* margin-left: 10rpx; */
  padding: 0 10rpx;
  color: #666666;
}

.container .groupinfo .groupinfo-top .copy {
  width: 110rpx;
  height: 39rpx;
  background: #2D5DF6;
  color: #fff;
  font-size: 24rpx;
  margin-left: 10rpx;
  text-align: center;
  line-height: 39rpx;
  border-radius: 10rpx;
}

.container .groupinfo .tips {
  color: #333333;
  font-size: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.container .groupinfo .img {
  margin-top: 30rpx;
  text-align: center;
}

.container .groupinfo .img image {
  width: 665rpx;
  height: 260rpx;
}

.container .next {
  width: 94%;
  margin: 0 3%;
  height: 85rpx;
  line-height: 85rpx;
  background: #2D5DF6;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

/* 弹框 */

.container .clickaddress {
  position: relative;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  width: 311rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  margin-top: 30rpx;
  line-height: 40rpx;
}

.container .clickaddress .content {
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-bottom: 34rpx;
  color: #666666;
  text-align: center;
  padding: 0 48rpx;
}

.container .clickaddress .btn {
  display: flex;
  margin-top: 30rpx;
  height: 80rpx;
}

.container .clickaddress .btn .cancel {
  width: 50%;
  background: #fff;
  border-radius: 0 0 0 10rpx;
  border-top: 1rpx solid #F5F5F5;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 24rpx;
}

.container .clickaddress .btn .addaddress {
  width:50%;
  color: #fff;
  background: #2D5DF6;
  border-radius: 0 0 10rpx 0;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 24rpx;
}

.container .clickaddress .close {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 弹框结束 */


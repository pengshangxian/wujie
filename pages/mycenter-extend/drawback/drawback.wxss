.container .kong {
  margin-top: 400rpx;
  padding: 200rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.container .noorder {
  display: none;
}

.container .kong image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

/* tab栏 */

.tabs {
  width: 100%;
  position: fixed;
  background: #fff;
  color: #333333;
  /* height: 60rpx; */
}

.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 150rpx;
  margin-top: 20rpx;
  background: #fff;
}

.tab view {
  margin-bottom: 10rpx;
}

.tab .select {
  /* font-size: 40rpx; */
  color: #2D5DF6;
}

.slider {
  height: 5rpx;
  width: 40rpx;
  position: absolute;
  left: 235rpx;
  background: #2D5DF6;
}

.tabs .left2 {
  left: 460rpx;
}

/* tab栏切换 */

.container .goodsbox {
  /* margin-top: -50rpx; */
}

.container .goods {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow:0px 4rpx 12rpx 0px rgba(0,0,0,0.12);
}

.container .goods .shopname {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 74rpx;
  /* background: rgba(98, 99, 103, 0.35); */
  font-size: 24rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx
}

.container .goods .shopname .staus {
  color: #e80202;
  line-height: 74rpx;
}

.container .goods .shopname image {
  width: 56rpx;
  height: 56rpx;
  margin-right: 10rpx;
}

.container .goods .shopname view {
  display: flex;
  align-items: center;
}

.container .goods .goodsinfo {
  width: 94%;
  margin: 0 3%;
  display: flex;
  padding-bottom: 20rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
  box-sizing: border-box;
}

.container .goods .goodsinfo .name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}

.container .goods .goodsinfo image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  /* margin-left: 20rpx; */
}

.container .goods .goodsinfo .norms {
  height: 24rpx;
  line-height: 24rpx;
  color: #999999;
  font-size: 20rpx;
  border-radius: 10rpx;
  margin: 10rpx 0 10rpx 0;
}

.container .goods .goodsinfo .money {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  color: #333;
}

.container .goods .goodsinfo .money view {
  display: flex;
  align-items: center;
}

.container .goods .goodsinfo .money .price {
  margin-right: 60rpx;
  font-size: 24rpx;
  font-weight: 400;
}

.container .goods .goodsinfo .money .recash {
  color: #e80202;
}

.container .goods  .btn {
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  margin:10rpx 0;
}

.container .goods  .btn>view:last-child{
  display: flex;
  align-items: center;
  color: #2D5DF6;
}

.container .goods  .btn .deleteorder{
  border: 1rpx solid #666666;
  color: #666666;
  padding: 0 10rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.container .goods  .btn .detail{
  border: 1rpx solid #2D5DF6;
  background: #2D5DF6;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
}

/* 弹框 */

.container .clickaddress {
  position: relative;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  width: 311rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  margin-top: 30rpx;
  line-height: 40rpx;
}

.container .clickaddress .content {
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-bottom: 34rpx;
  color: #666666;
  text-align: center;
  padding: 0 48rpx;
}

.container .clickaddress .btn {
  display: flex;
  margin-top: 30rpx;
  height: 80rpx;
}

.container .clickaddress .btn .cancel {
  width: 50%;
  background: #fff;
  border-radius: 0 0 0 10rpx;
  border-top: 1rpx solid #F5F5F5;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 24rpx;
}

.container .clickaddress .btn .addaddress {
  width:50%;
  color: #fff;
  background: #2D5DF6;
  border-radius: 0 0 10rpx 0;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 24rpx;
}

.container .clickaddress .close {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 弹框结束 */

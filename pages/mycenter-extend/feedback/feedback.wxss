/* 提交弹框 */
.container .modal{
  position: relative;
}

.container .modal .title{
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.container .modal .content{
  margin-top: 60rpx;
  color: #6F6F6F;
  padding: 0 58rpx;
}

.container .modal .btn{
  display: flex;
  /* justify-content: space-between; */
  margin-top: 30rpx;
  font-size: 24rpx;
  margin-bottom: 0;
}

.container .modal .btn .cancle{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 0 10rpx;
  color: #828181;
}

.container .modal .btn .submit{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  background: #2D5DF6;
  border-radius: 0 0 10rpx 0;
  color: #fff;
}

.container .modal .x{
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.container .record{
  margin-top: 28rpx;
  margin-left: 3%;
  color: #333333;
  font-weight: 400;
}
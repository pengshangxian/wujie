.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.box {
  width: 94%;
  margin: 0 3%;
  margin-bottom: 20rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333;
}

.box view{
  padding: 24rpx 0;
}

.box view input{
  width: 500rpx;
  color: #999;
}

.box .company {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #EEEEEE;
}

.container .kuaidinum {
  display: flex;
  align-items: center;
}

.container .message {
  width: 94%;
  margin: 0 3%;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #999;
}

.container .message .title {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
}

.container .message .title>view:last-child {
  color: #999;
  font-size: 20rpx;
}

.container .submit {
  position: fixed;
  bottom: 180rpx;
  width: 94%;
  height: 76rpx;
  margin: 0 3%;
  border-radius: 10rpx;
  background: #2d5df6;
  margin-top: 100rpx;
  color: #fff;
  line-height: 76rpx;
  text-align: center;
  font-size: 30rpx;
}

/* 弹框 */

.container .clickaddress {
  padding: 20rpx;
  position: relative;
  color: #333;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  /* width: 311rpx; */
  margin: 0 auto;
  margin-top: 30rpx;
  line-height: 40rpx;
  margin-bottom: 16rpx;
  font-weight: 400;
  padding: 0 60rpx;
  color: #666666;
  font-size: 24rpx;
  text-indent:2em;
}

.container .clickaddress .content{
  padding: 0 20rpx;
  box-sizing: border-box;
}

scroll-view{
  height: 600rpx;
  /* padding: 0 20rpx; */
  /* padding-left: 10rpx; */
  box-sizing: border-box;
}

.container .clickaddress .btn {
  margin-top: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: #2D5DF6;
  color: #fff;
}

/* 弹框结束 */
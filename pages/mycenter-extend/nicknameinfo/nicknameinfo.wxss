.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  box-shadow:0px 4rpx 12rpx 0px rgba(0,0,0,0.12);
  
}

.tui-header {
  width: 100%;
  font-size: 34rpx;
  line-height: 32rpx;
  font-weight: 400;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.container .info{
  width: 94%;
  height: 100vh;
  margin: 0 3%;
  background: #fff;
  margin-top: -70rpx;
  border-radius: 10rpx;
}

.container .info .changeimg{
  padding: 45rpx 0 30rpx 0;
  background-image: url(http://imgs1.yyjswork.com/DocumenInfo/0200/61/00/WJ202006100859443302/c813165339164c0fbf177012afeffe4a.png);
  background-size: 100% 100%;
}

.container .info .changeimg>view{
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  font-weight: 400;
}

.container .info .changeimg image{
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.container .info .changeinfo{
  margin-top: 20rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
}

.container .info .name{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin: 0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  border-bottom: 1rpx solid #EEEEEE;
  color: #333;
}

.container .info .name .text{
  color: #999;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.container .sex{
  display: flex;
  align-items: center;
  padding: 10rpx 0rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #EEEEEE;
  color: #333;
}

.container .sex .radio-group{
  margin-left: 20rpx;
  color: #999;
}

.container .sex radio{
  transform:scale(0.7);
}

.container .birthday{
  font-size: 24rpx;
  padding: 20rpx;
  color: #333;
}

.container .birthday .section{
  color: #999;
}

.container .submit{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background: #2D5DF6;
  margin-top: 340rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.container .cancle{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background: #8DA8FF;
  margin-top: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.container .birthday{
  display: flex;
  font-size: 28rpx;
}

.container .birthday .section{
  margin-left: 40rpx;
}

/* 弹框 */

.container .clickaddress {
  position: relative;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  width: 311rpx;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
  margin-top: 60rpx;
  line-height: 40rpx;
  color: #333;
}

.container .clickaddress .btn {
  display: flex;
  margin-top: 60rpx;
  height: 80rpx;
}

.container .clickaddress .btn .cancel {
  width: 50%;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 0 10rpx;
  border-top: 1rpx solid #F5F5F5;
  font-size: 30rpx;
}

.container .clickaddress .btn .addaddress {
  width: 50%;
  color: #fff;
  background: #2D5DF6;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 0;
  font-size: 30rpx;
}

.container .clickaddress .close {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 弹框结束 */
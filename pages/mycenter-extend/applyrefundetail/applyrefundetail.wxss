/* pages/mycenter-extend//applyrefundetail/applyrefundetail.wxss */

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.time{
  display: flex;
  font-size: 20rpx;
  align-items: center;
}

.container{
  padding-bottom: 82rpx;
}

.container .refundstatus {
  width: 94%;
  /* height: 200rpx; */
  margin: 0 3%;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
  padding: 26rpx 28rpx 26rpx 30rpx;
  box-sizing: border-box;
}

.container .refundstatus .shopattitude{
  color: #666;
  font-size: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}

.container .refundstatus .shopattitude view{
  line-height: 32rpx;
}

.container .refundstatus .shopattitude>view:first-child{
  color: #333;
  font-size: 24rpx;
}

.container .refundstatus .step{
  color: #666;
  font-size: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 18rpx;
}

.container .refundstatus .step view{
  line-height: 28rpx;
}

.container .refundstatus .step>view:first-child{
  color: #333;
  font-size: 24rpx;
  margin: 16rpx 0 6rpx;
}

.container .refundstatus .address{
  padding-top: 16rpx;
  color: #999999;
  font-size: 20rpx;
}

.container .refundstatus .address>view:first-child{
  display: flex;
  justify-content: space-between;
}

.container .refundstatus .address view{
  line-height: 28rpx;
}

.container .refundstatus .address .copy{
  color: #2D5DF6;
  border: 1rpx solid #2D5DF6;
  padding: 0 10rpx;
  border-radius: 20rpx;
}

.container .refundstatus .kuaidi{
  font-size: 24rpx;
  color: #333;
  padding-top: 14rpx;
}

.container .refundstatus .kuaidi .time{
  color: #999999;
  margin-bottom: 18rpx; 
  font-size: 20rpx;
  line-height: 28rpx;
}

.container .refundstatus .kuaidi .change{
  font-size: 20rpx;
}

.container .refundstatus .shoprefuse{
  color: #333;
  font-size: 24rpx;
  border-bottom: 1rpx solid #eee;
  padding: 18rpx 0;
}

.container .refundstatus .shoprefuse view{
  line-height: 34rpx;
}

.container .refundstatus .tips{
  font-size: 20rpx;
  margin-top: 14rpx;
  color: #666;
}

.container .refundstatus .tips view{
  line-height: 28rpx;
}

.container .logisticinfo{
  display: flex;
  justify-content: space-between;
  width: 94%;
  margin: 20rpx 3%;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #666666;
  box-shadow:0px 4rpx 12rpx rgba(0,0,0,0.12);
  border-radius: 10rpx;
}

.container .logisticinfo>view:last-child{
  display: flex;
  justify-content: center;
  align-items: center;
  background: #2D5DF6;
  border-radius: 16rpx;
  background: #2D5DF6;
  color: #fff;
  font-size: 20rpx;
  padding-left: 10rpx
}

.container .logisticinfo image{
  width: 18rpx;
  height: 18rpx;
  margin-left: 5rpx;
}
/* 店铺 */

.container .orderdetail {
  width: 94%;
  margin: 0 3%;
  margin-top: 20rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
  padding: 26rpx 28rpx 26rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333;
}

.container .orderdetail .shop {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
}

.container .orderdetail .shop image{
  width: 42rpx;
  height: 42rpx;
}

.container .orderdetail .shop view:last-child {
  color: #2d5df6;
}

.container .orderdetail .reason {
  padding: 14rpx 0;
  border-bottom: 1rpx solid #eee;
}

.container .orderdetail .reason view {
  line-height: 34rpx;
}

.color {
  color: #666;
}

.container .imgs{
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  margin: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.container .imgs image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
}

.container .imgs .last{
  margin-right: 0;
}

.container .orderdetail .ordernum {
  padding-top: 10rpx;
  color: #666;
  font-size: 20rpx;
}

.container .orderdetail .ordernum view {
  display: flex;
  align-items: center;
  /* line-height: 44rpx; */
}

.container .orderdetail .ordernum view:last-child{
  margin-top: 10rpx;
}

.container .orderdetail .copy{
  margin-left: 20rpx;
  border: 1rpx solid #999;
  color: #999;
  padding: 0 10rpx;
  border-radius: 20rpx;
}

/* 底部 */
.container .bot {
  width: 100%;
  height: 82rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  bottom: 0;
  background: #fff;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow:0px -4rpx 12rpx 0px rgba(0,0,0,0.12);
}

.container .bot .chexiao {
  width: 182rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #999999;
  border-radius: 10rpx;
  margin-right: 20rpx;
  text-align: center;
  color: #666666;
}

.container .bot .write{
  width: 184rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  text-align: center;
  background: #2D5DF6;
  color: #fff;
}

.container .writenum{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: #2D5DF6;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
}


/* 弹框 */

.container .clickaddress {
  position: relative;
}

.container .clickaddress .title{
  color: #333;
  font-size: 30rpx;
  margin: 24rpx auto;
  margin-top: 30rpx;
  text-align: center;
}

.container .clickaddress .jz {
  width: 72rpx;
  height: 72rpx;
  padding-left: 220rpx;
}

.container .clickaddress .tips {
  width: 311rpx;
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  line-height: 40rpx;
  color: #666666;
}

.container .clickaddress .btn {
  display: flex;
  margin-top: 30rpx;
  height: 60rpx;
}

.container .clickaddress .btn .cancel {
  width: 50%;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 0 10rpx;
  border-top: 1rpx solid #F5F5F5;
  font-size: 30rpx;
}

.container .clickaddress .btn .addaddress {
  width: 50%;
  color: #fff;
  background: #2D5DF6;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 0;
  font-size: 30rpx;
}

.container .clickaddress .close {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

/* 弹框结束 */
/* pages/mycenter-extend//publishevaluation/publishevaluation.wxss */

page {
  /* background: #E8E8E9; */
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.container .content {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.container .content .shop {
  height: 74rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.container .content .shop image {
  height: 46rpx;
  width: 46rpx;
  padding: 0 20rpx;
}

.container .content .content-mid {
  padding: 0 20rpx 20rpx;
  display: flex;
  font-size: 24rpx;
}

.container .content .content-mid image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.container .content .content-mid .model {
  font-size: 20rpx;
  margin-top: 5rpx;
  color: #999;
}

.container .content .content-mid .count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  margin-top: 20rpx;
  font-weight: 400;
  color: #999;
}

.container .content .content-mid .count .rcash {
  width: 122rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: #fff;
  background: #2d5df6;
  font-weight: 400;
  padding: 0 10rpx;
  border-radius: 10rpx;
  text-align: center;
}

.container .evaluation {
  /* height: 443rpx; */
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
}

.container .evaluation .evaluation-top {
  padding: 0 30rpx 30rpx;
  font-size: 24rpx;
  color: #666;
}

.container .evaluation .evaluation-top view {
  margin-bottom: 2rpx;
}

.container .evaluation .evaluation-top tui-rate {
  vertical-align: -5rpx;
}

.container .evaluation-bot {
  width: 94%;
  margin: 0 3%;
  padding: 20rpx;
  color: #6c6c6c;
  font-size: 24rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
  margin-top: 20rpx;
  box-sizing: border-box;
}

.container .evaluation-bot .add {
  display: flex;
  /* margin-top: 100rpx; */
  text-align: center;
  color: #6c6c6c;
}

.container .evaluation-bot .add view {
  margin-right: 20rpx;
}

.container .evaluation-bot .add image {
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 5rpx;
}

.container .submit {
  height: 76rpx;
  line-height: 76rpx;
  width: 94%;
  margin: 0 3%;
  background: #2d5df6;
  border-radius: 10rpx;
  margin-top: 30rpx;
  color: #fff;
  text-align: center;
}

/* 上传图片 */

.upload {
  /* width: 94%;
  margin: 0 3%; */
  background: #fff;
  border-radius: 10rpx;
  font-weight: 400;
  margin-top: 30rpx;
  font-size: 24rpx;
}

.upload image {
  width: 109rpx;
  height: 109rpx;
}

.uploadbtn {
  text-align: center;
  width: 109rpx;
  height: 109rpx;
  /* border: 2rpx solid #DDDDDD; */
  box-sizing: border-box;
  color: #999;
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 1rpx;
  margin-bottom: 1rpx;
}

.upload .question-images {
  padding-top: 20rpx;
  display: flex;
}

/* .upload .question-images view{
  margin-right: 20rpx;
  text-align: center;
} */

.upload .question-images image {
  /* width: 100rpx;
  height: 100rpx; */
}

.upload .question-images .q-image-wrap {
  margin-right: 30rpx;
  text-align: center;
}

.upload .question-images .q-image-wrap image {
  width: 100rpx;
  height: 100rpx;
}

/* 上传图片结束 */

/* .container .evaluation .myvideo{
  width: 200rpx;
  height: 200rpx;
} */

.container .evaluation .myvideo video {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
}

/* 提交弹框 */

.container .modal {
  position: relative;
}

.container .modal .title1 {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.container .modal .content1 {
  margin-top: 20rpx;
  color: #6f6f6f;
  text-align: center;
  margin-bottom: 30rpx;
}

.container .modal .btn {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
  font-size: 30rpx;
}

.container .modal .btn .cancle {
  width: 155rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #666;
  border-radius: 35rpx;
  color: #666;
}

.container .modal .btn .submit1 {
  width: 155rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #2d5df6;
  border-radius: 35rpx;
  color: #fff;
}

.container .modal .x {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

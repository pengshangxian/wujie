.sendmessage {
  width: 100%;
  z-index: 1000;
  position: fixed;
  bottom: 0px;
  background-color: #fff;
  flex-direction: row;
  /* height: 100rpx; */
}

.sendmessage .msg{
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-right: 10rpx;
}

.sendmessage .face {
  display: flex;
  flex-wrap: wrap;
  height: 200rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  overflow-y: auto;
}

.sendmessage .face>view{
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 10rpx;
}
 
.sendmessage input {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #d0d0d0;
  padding-left: 20rpx;
}
 
.sendmessage .user_input_text {
  border: 1px solid white;
  width: 120rpx;
  height: 70rpx;
  background: rgb(121,197,103);
  color: white;
  line-height: 70rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 24rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
}
 

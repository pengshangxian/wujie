/* tab栏 */
.tabs{
  position: relative;
  background: #fff;
  color: #333;
}

.tabs .tabs-top{
  height: 60rpx;
  font-size: 20rpx;
  line-height: 60rpx;
  background: #F2F2F2;
  text-align: center;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}

.tab view{
  margin-bottom: 10rpx;
}

.tab .select{
  /* font-size: 40rpx; */
  color: #2D5DF6;
}

.slider{
  height: 5rpx;
  width: 40rpx;
  background: #2D5DF6;
  position: absolute;
  left: 88rpx;
  bottom: 0;
}

.tabs .left2{
  left: 298rpx;
}

.tabs .left3{
  left: 477rpx;
}

.tabs .left4{
  left: 640rpx;
}
/* tab栏切换 */

.container .red{
  background: #E80202;
  height: 60rpx;
  border-top: 1rpx solid #E80202;
}

.container .redsize{
  height: 30rpx;
}

.container .memberbox{
  margin-top: -40rpx;
}

.container .member{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 93%;
  margin: 0 3%;
  height: 140rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #828181;
  margin-bottom: 20rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
}

.container .member .member-top{
  height: 100%;
  display: flex;
  align-items: center;
}

.container .member .member-top .infobox{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #666;
  font-size: 24rpx;
}

.container .member .member-top image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.container .member .member-top .name{
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
}

.container .member .member-top .phone{
  color: #666666;
  font-size: 24rpx;
}

.container .member .member-bot{
  
}

.container .member .member-bot image{
  width: 10rpx;
  height: 18rpx;
}

.container .none{
  text-align: center;
  font-size: 24rpx;
  color: #828181;
  font-weight: 400;
  margin-top: 380rpx;
}

.container .none image{
  width: 124rpx;
  height: 124rpx;
  margin-bottom: 20rpx;
}

.container .kong{
  display: none;
}

.tips{
  color: #999999;
  font-size: 20rpx;
  margin-top: 10rpx;
  margin-left: 3%;
}
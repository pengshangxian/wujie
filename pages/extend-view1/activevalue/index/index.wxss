.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background:linear-gradient(166deg,rgba(48,96,247,1) 0%,rgba(45,193,246,1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}


.container .activevalue {
  width: 94%;
  margin: 0 3%;
  text-align: center;
  height: 102rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 400;
  box-sizing: border-box;
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.16);
  border-radius: 10rpx;
  line-height: 102rpx;
}

.container .activevalue image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: -10rpx;
  margin-right: 7rpx;
}

.container .activevalue .value {
  padding-bottom: 5rpx;
  border-bottom: 1rpx solid #fff;
}

.container .topbox {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.16);
  color: #666;
  font-weight: 400;
}

.container .topbox>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
}

.container .topbox image {
  width: 10rpx;
  height: 18rpx;
}

.bt {
  border-bottom: 1rpx solid #EEEEEE;
}

.container .tips {
  background: #fff;
  border-radius: 10rpx;
  font-size: 24rpx;
  /* padding: 20rpx 30rpx; */
  color: #D34545;
  box-sizing: border-box;
}

.container .rules{
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.16);
  color: #666;
}

.container .rules .mr{
  margin-bottom: 13rpx;
  font-size: 28rpx;
  color: #333;
}

.mt{
  margin-top: 20rpx;
}
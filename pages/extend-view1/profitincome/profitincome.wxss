.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

/* tab栏 */
.tabs{
  position: relative;
  background: #fff;
  color: #333333;
  padding: 10rpx 0;
}

.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tab view{
  margin-bottom: 10rpx;
}

.tab .select{
  /* font-size: 40rpx; */
  color: #2D5DF6;
}

.slider{
  height: 5rpx;
  width: 40rpx;
  background: #2D5DF6;
  position: absolute;
  left: 170rpx;
}

.tabs .left2{
  left: 540rpx;
}

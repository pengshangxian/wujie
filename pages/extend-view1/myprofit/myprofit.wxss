/* pages/extend-view1//myprofit/myprofit.wxss */
.container{
  position: relative;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9998;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

/* tab栏 */
.tabs{
  position: relative;
  background: #fff;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx;
  box-sizing: border-box;
  font-weight: 400;
}

.tab{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tab view{
  margin-bottom: 10rpx;
}

.tab .select{
  /* font-size: 40rpx; */
  color: #2D5DF6;
}

.slider{
  height: 5rpx;
  width: 40rpx;
  background: #2D5DF6;
  position: absolute;
  left: 110rpx;
}

.tabs .left2{
  left: 354rpx;
}

.tabs .left3{
  left: 600rpx;
}
/* tab栏切换 */

/* 本月预估 */
.container .myprofit{
  margin-top: 110rpx;
}

.container .myprofit .myprofit-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  width: 94%;
  margin: 0 3%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #A6A6A8;
}

.container .myprofit .myprofit-top .pop{
  color: #0257E1;
  font-size: 20rpx;
}

.container .myprofit .myprofit-bot{
  width: 94%;
  margin: 0 3%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #999999;
}

.container .myprofit .myprofit-bot view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  /* padding: 0 20rpx; */
}

.container .myprofit .myprofit-bot .border{
  border-bottom: 1rpx solid #EEEEEE;
}

.container .myprofit .myprofit-bot .money{
  color: #2D5DF6;
}
/* 本月预估结束 */



/* 底部弹出框 */
.container .showtext{
  /* padding: 20rpx 20rpx 40rpx 20rpx； */
}

.container .showtext .text{
  margin-top: 20rpx;
  font-weight: 400;
  font-size: 24rpx;
  padding: 38rpx 40rpx;
  color: #666;
}

.container .showtext .text view{
  line-height: 40rpx;
  text-indent: 20rpx;
}

.container .showtext .know{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background: #2D5DF6;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 0 0 10rpx 10rpx;
}

/* 底部跳转框 */
.container .myprofit-to{
  height: 278rpx;
  width: 94%;
  margin: 0 3%;
  box-sizing: border-box;
  background: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  margin-top: 76rpx;
  color: #666;
  font-weight: 400;
}

.container .myprofit-to view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  /* padding: 0 20rpx; */
} 

.container .myprofit-to .myprofit-to-box{
  border-bottom: 1rpx solid #EEEEEE;
}

.container .myprofit-to image{
  height: 18rpx;
  width: 10rpx;
}

.container .yugu{
  text-align: right;
  margin-right: 3%;
  margin-top: 26rpx;
  font-size: 24rpx;
  color: #2D5DF6;
}
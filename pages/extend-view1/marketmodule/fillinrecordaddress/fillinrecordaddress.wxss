/* pages/extend-view1//marketmodule/fillinrecordaddress/fillinrecordaddress.wxss */

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%);
  overflow: hidden;
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.content {
  width: 94%;
  margin: 0 3%;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.16);
}

.content>view {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  margin-left: 20rpx;
  border-top: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}

.content input {
  width: 500rpx;
  margin-left: 24rpx;
  font-size: 24rpx;
}

.content textarea {
  width: 500rpx;
  height: 100rpx;
  margin-left: 24rpx;
  font-size: 24rpx;
  padding-top: 6rpx;
}

.submit {
  width: 568rpx;
  height: 78rpx;
  background: rgba(45, 93, 246, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 78rpx;
}

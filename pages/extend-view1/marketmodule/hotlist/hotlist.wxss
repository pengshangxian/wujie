/* pages/extend-view1//marketmodule/hotlist/hotlist.wxss */

page {
  /* background: #e8e8e9; */
}
.container{
  background: #8F14E6;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  /* background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%); */
  background: #fff;
  overflow: hidden;
  box-shadow:0px 4rpx 12rpx 0px rgba(0,0,0,0.12);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}


/* tab栏 */

.tabs {
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  /* background: #E80202; */
  color: #333;
  overflow: hidden;
  background: #FFFFFF;
  z-index: 9999;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
}

.tab view {
  margin-bottom: 10rpx;
}

.tab .select {
  color: #2D5DF6;
  border-bottom: 1rpx solid #2D5DF6;
}

.slider {
  height: 5rpx;
  width: 40rpx;
  background: black;
  position: absolute;
  left: 100rpx;
  background: #fff;
}

.tabs .left1 {
  left: 340rpx;
}

.tabs .left2 {
  left: 600rpx;
}

/* tab栏切换 */

swiper{
  width: 94%;
  height: 400rpx;
  margin: 0 3%;
  overflow: hidden;
}

swiper image{
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}


.tab1{
  font-size: 28rpx;
  margin-top: 26rpx;
  margin-bottom: 22rpx;
}

.goodsbox {
  width: 94%;
  margin: 0 3%;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
  padding: 14rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.container .goods {
  display: flex;
  font-size: 24rpx;
  color: #333;
  padding: 20rpx 0;
  border-top: 1rpx solid #EEEEEE;
}

.container .goods .imgbox{
  position: relative;
}

.container .goods .imgbox{
  position: relative;
}

.container .goods .imgbox .icontext{
  position: absolute;
  color: #fff;
  font-size: 16rpx;
  top: 0;
  left: 8rpx;
}

.container .goods .imgbox .goodimg{
  border-radius: 10rpx 0 0 0;
}

.container .goods .imgbox .icon{
  width: 96rpx;
  height: 22rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.container .goods image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.container .goods .info{
  width: 464rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container .goods .info .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
}

.container .goods .recash{
  display: flex;
  margin-top: 10rpx;
}

.container .goods .recash>view:first-child{
  display: flex;
  width: 134rpx;
  height: 30rpx;
  line-height: 30rpx;
  border: 1rpx solid #2D5DF6;
  border-radius: 14rpx;
  font-size: 20rpx;
  color: #2D5DF6;
}

.container .goods .recash>view:last-child{
  width: 136rpx;
  text-align: center;
  border: 1rpx solid #2D5DF6;
  margin-left: 10rpx;
  border-radius: 14rpx;
  font-size: 20rpx;
  color: #333;
  padding: 0 10rpx;
}

.container .goods .recash .text{
  width: 60rpx;
  height: 100%;
  display: inline-block;
  background: #2D5DF6;
  color: #fff;
  border-radius: 14rpx;
  text-align: center;
  margin-left: -2rpx;
  margin-bottom: -1rpx;
}

.container .goods .buy{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .goods .buy>view:first-child{
  display: flex;
  align-items: flex-end;
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
}

.container .goods .buy>view:last-child{
  font-size: 24rpx;
  color: #fff;
  background: #2D5DF6;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

.container .goods .buy .qiang{
  width: 120rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  font-size: 24rpx;
}

.hot{
  font-size: 28rpx;
  color: #fff;
  margin: 26rpx 3%;
}

.container .botbanner{
  width: 94%;
  height: 198rpx;
  margin: 30rpx 3% 0;
}

/* 小闹钟弹框 */
.container .alarm{
  position: fixed;
  width: 98rpx;
  height: 108rpx;
  right: 0;
  bottom: 300rpx;
}

.container .alarm image{ 
  width: 100%;
  height: 100%;
  position: absolute;
}

.container .alarm .second{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 100;
  top: 30rpx;
  left: 20rpx;
  text-align: center;
}

.container .alarm .taskcomplete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 100;
  top: 20rpx;
  left: 25rpx;
  font-size: 20rpx;
  color: #FACA01;
}
/* 小闹钟弹框结束 */
.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  /* background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%); */
  background: #fff;
  overflow: hidden;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

swiper {
  width: 94%;
  height: 400rpx;
  margin: 0 3%;
  overflow: hidden;
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.goodbox {
  width: 94%;
  margin: 20rpx 3% 0;
}

.goodbox .goods {
  padding: 30rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.goodbox .goods>view:first-child{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.goodbox .goods>view:first-child image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}

.goodbox .goods .time{
  color: #2D5DF6;
  font-size: 20rpx;
}

.goodbox .goods .content{
  font-size: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
  padding: 14rpx 0 16rpx;
  color: #333;
}

.goodbox .goods .maidian{
  display: flex;
  justify-content: space-between;
  padding: 18rpx 0;
  font-size: 24rpx;
  color: #666;
  border-bottom: 1rpx solid #EEEEEE;
}

.goodbox .goods .maidian>view:first-child{
  display: flex;
}

.goodbox .goods .maidian image{
  width: 32rpx;
  height: 32rpx;
}

.goodbox .goods .maidian>view:first-child{
  /* flex: 8; */
} 

.goodbox .goods .maidian>view:last-child{
  display: flex;
  align-items: flex-end;
  /* flex: 2; */
} 

.goodbox .goods .maidian .copy{
  width: 120rpx;
  height: 35rpx;
  line-height: 35rpx;
  background: #2D5DF6;
  font-size: 24rpx;
  color: #fff;
  border-radius: 16rpx;
  text-align: center;
}

.price{
  margin: 10rpx 0 16rpx;
  font-size: 28rpx;
  color: #333;
}

.goodbox .goods .imgs{
  display: flex;
  justify-content: space-between;
}

.goodbox .goods .imgs image{
  width: 206rpx;
  height: 206rpx;
}

.goodbox .goods .botbtn{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #2D5DF6;
}

.goodbox .goods .botbtn>view:last-child{
  width: 120rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 16rpx;
  color: #fff;
  text-align: center;
  background: #2D5DF6;
}

.container .botbanner{
  width: 94%;
  height: 198rpx;
  margin: 30rpx 3% 0;
}
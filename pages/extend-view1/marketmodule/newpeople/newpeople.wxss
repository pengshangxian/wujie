.container{
  background: rgb(83,133,246)
}
.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  /* background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%); */
  background: #fff;
  overflow: hidden;
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.container {
  width: 100%;
  height: 100vh;
  background: url(http://imgs2.yyjswork.com/DocumenInfo/0200/62/90/WJ202006290505372345/515ed6b9df75489f83a9a07a0f6e9694.png);
  background-size: 100% 100%;
}

.rule {
  position: absolute;
  right: 0;
  width: 76rpx;
  height: 44rpx;
  background: rgba(255, 176, 41, 1);
  border-radius: 22rpx 0 0 22rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 44rpx;
  color: #fff;
  margin-top: 74rpx;
}

.container .goodbox {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 314rpx;
  position: relative;
}

.container .goodbox .title {
  width: 388rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  position: absolute;
  background: #ffb029;
  border-radius: 6rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  left: 160rpx;
  top: -36rpx;
  z-index: 10;
}

.container .goodbox .refresh {
  position: absolute;
  right: 14rpx;
  top: 14rpx;
  display: flex;
  align-items: center;
  color: #999;
  font-size: 20rpx;
}

.container .goodbox .refresh image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 6rpx;
}

.container .goodbox .bg {
  width: 388rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  position: absolute;
  background: #e99227;
  border-radius: 6rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  left: 154rpx;
  top: -28rpx;
}

.goods {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 56rpx 36rpx 20rpx;
}

.goods .content {
  width: 200rpx;
  text-align: center;
  /* margin-top: 10rpx; */
}

.goods .content image {
  width: 200rpx;
  height: 200rpx;
}

.goods .content .goodname {
  color: #333;
  font-size: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.goods .content .price {
  color: #fc5b4e;
  font-size: 24rpx;
  margin: 6rpx 0;
}

.goods .content .buy {
  width: 160rpx;
  height: 40rpx;
  background: #fe8d02;
  font-size: 24rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  margin: 0 auto;
}

.container .invite {
  width: 94%;
  height: 200rpx;
  margin: 0 3% 0;
}

.modal{
  position: relative;
}

.modal .title{
  text-align: center;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EEEEEE;
  color: #333;
  font-size: 24rpx;
}

.modal image{
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  right: 16rpx;
  top: 16rpx;
}
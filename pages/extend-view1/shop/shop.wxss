page {
  background: #e8e8e9;
}

.container {
}

.tui-header-box {
  width: 100%;
  background: linear-gradient(-45deg, rgba(236, 110, 110, 1), rgba(239, 185, 66, 1));
  /* position: fixed;
  z-index: 99998;
  left: 0;
  top: 0; */
}

.tuibox{
  position: fixed;
  z-index: 9999999;
  overflow: hidden;
}

.tui-header {
  display: flex;
  align-items: flex-start;
  z-index: 9999;
}

.tui-back {
  margin-left: 8rpx;
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}


.container .shop {
  background: linear-gradient(-45deg, rgba(236, 110, 110, 1), rgba(239, 185, 66, 1));
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  /* margin-top: 132rpx; */
}

.container .shop .shoptop {
  display: flex;
  align-items: center;
}

.container .shop .shopimg {
}

.container .shop .shopimg image {
  width: 94rpx;
  height: 95rpx;
  padding-top: 3rpx;
}

.container .shop .shopname {
  margin-left: 38rpx;
}

.container .shop .shopname .name {
  font-size: 34rpx;
  font-weight: 400;
  color: #fff;
}

.container .shop .shopname .count {
  font-size: 22rpx;
  background: #e8e8e9;
  border-radius: 30rpx;
  margin-top: 10rpx;
}

.container .shop .shopname .count .wujie {
  background: #e10b0b;
  color: #fff;
  border-radius: 30rpx;
  padding: 0 10rpx;
}

.container .shop .shopname .count .num {
  padding: 0 10rpx;
}

.container .shop .shopbot {
  /* text-align: right; */
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.container .shop .shopbot .colloct1 {
  width: 100rpx;
  color: #fff;
  border: 1rpx solid #fff;
  padding: 0 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  text-align: center;
}

.container .shop .shopbot .colloct2 {
  color: #fff;
  background: #e10b0b;
  border: 1rpx solid #e10b0b;
  padding: 0 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.container .clasic {
  background: #fff;
  margin-bottom: 20rpx;
}

.container .clasic .clasiccontent {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 0 0;
  height: 50rpx;
  overflow: hidden;
}

.container .clasic .select{
  height: auto;
  transition: 1s
}

.container .clasic .clasiccontent view {
  margin: 10rpx 20rpx 0;
  font-size: 22rpx;
  background: #E8E8E9;
  padding: 5rpx 20rpx;
  border-radius: 20rpx;
}

.container .clasic .down{
  text-align: center;
  padding-bottom: 10rpx;
}

.container .clasic .down image {
  width: 22rpx;
  height: 11rpx;
}

/*screen*/

.tui-header-screen {
  width: 94%;
  margin: 0 3%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  /* position: fixed; */
  /* z-index: 1000; */
}

.tui-screen-top, .tui-screen-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}

.tui-screen-top {
  height: 88rpx;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
}

.tui-top-item {
  height: 28rpx;
  line-height: 28rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tui-top-item image{
  width: 17rpx;
  height: 25rpx;
}

.tui-topitem-active {
  color: #e41f19;
}

.tui-active {
  color: #e41f19;
}




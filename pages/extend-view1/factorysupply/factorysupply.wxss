/* pages/extend-view1//factorysupply/factorysupply.wxss */

page {
  background: #031116;
}

.tui-header-box {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  /* background: linear-gradient(166deg, rgba(48, 96, 247, 1) 0%, rgba(45, 193, 246, 1) 100%); */
  background: #fff;
  overflow: hidden;
}

.tui-header {
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 500;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.tui-header-icon {
  position: fixed;
  left: 20rpx;
  top: 0;
  display: flex;
  align-items: flex-start;
  height: 64rpx;
  transform: translateZ(0);
  z-index: 99999;
}

.tui-header-box .back {
  width: 64rpx;
  height: 64rpx;
}

.tui-header-box .back1 {
  width: 32rpx;
  height: 44rpx;
  margin-top: 10rpx;
}

.tui-badge {
  background: #e41f19 !important;
  position: absolute;
  right: -4px;
}

.tui-icon-ml {
  margin-left: 20rpx;
}

.tui-icon {
  height: 32px;
  width: 32px;
  border-radius: 16px;
}

.tui-icon-back {
  height: 32px !important;
  width: 32px !important;
  display: block !important;
}

.top {
  /* margin-bottom: 30rpx; */
  /* border-radius: 14rpx; */
}

.top .bg {
  width: 100%;
  height: 128rpx;
}

.top .topimg {
  width: 94%;
  margin: 0 3%;
  margin-top: -128rpx;
  /* overflow: hidden; */
  border-radius: 14rpx;
}

.container .hot {
  margin-left: 3%;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  margin-top: 30rpx;
}

.goodbox {
  display: flex;
  justify-content: space-between;
  width: 94%;
  margin: 0 3%;
  flex-wrap: wrap;
}

.goodbox .goods {
  width: 340rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background: #fff;
  overflow: hidden;
}

.goodbox .goods image {
  width: 340rpx;
  height: 340rpx;
}

.goodbox .goods .goodsname {
  height: 80rpx;
  font-size: 24rpx;
  color: #333;
  padding: 10rpx 6rpx 6rpx 14rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  box-sizing: border-box;
}

.goodbox .goods .goodsbot {
  display: flex;
  justify-content: space-between;
  padding: 0 14rpx 30rpx;
  font-size: 28rpx;
  color: #2d5df6;
  margin-top: 10rpx;
}

.goodbox .goods .goodsbot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 14rpx 30rpx;
  font-size: 28rpx;
  color: #2d5df6;
}

.goodbox .goods .goodsbot>view:first-child {
  display: flex;
  align-items: flex-end;
  color: #000;
}

.container .goods .recash {
  width: 136rpx;
  height: 38rpx;
  background: #2d5df6;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  border-radius: 18rpx;
  line-height: 38rpx;
}

.categorybox {
  width: 94%;
  margin: 0 3%;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.12);
  /* margin-top: 24rpx; */
}

.tui-product-category {
  width: 100%;
  height: 326rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #555;
  /* border-radius: 10rpx; */
  white-space: nowrap;
}

.tui-category-item {
  width: 194rpx;
  display: inline-block;
  /* height: 118rpx; */
  padding-top: 30rpx;
  /* text-align: center; */
  margin: 0 15rpx;
  padding: 30rpx 15rpx 0 15rpx;
}

 .tui-category-name{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}

.tui-category-img {
  height: 194rpx;
  width: 194rpx;
  /* display: block; */
}

.tui-pro-img {
  width: 100%;
  display: block;
}

.scollline {
  width: 80rpx;
  height: 6rpx;
  background: rgb(230, 230, 230);
  margin: 0 auto 14rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.innerline {
  width: 40rpx;
  height: 6rpx;
  background: #2d5df6;
  margin: 0 auto 20rpx;
  border-radius: 10rpx;
  position: absolute;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container .invite {
  width: 94%;
  height: 206rpx;
  margin: 0 3%;
  margin-top: 20rpx;
}

/* 小闹钟弹框 */
.container .alarm{
  position: fixed;
  width: 98rpx;
  height: 108rpx;
  right: 0;
  bottom: 300rpx;
}

.container .alarm image{ 
  width: 100%;
  height: 100%;
  position: absolute;
}

.container .alarm .second{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 100;
  top: 30rpx;
  left: 20rpx;
  text-align: center;
}

.container .alarm .taskcomplete{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 100;
  top: 20rpx;
  left: 25rpx;
  font-size: 20rpx;
  color: #FACA01;
}
/* 小闹钟弹框结束 */